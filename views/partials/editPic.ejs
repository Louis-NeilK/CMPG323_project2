<div class="popupNoShow editMetaDiv">
    <div class="editMetaInfoDiv">
        <h4 class="text-success textCenter">Meta Data</h4>
        <div class="row margintop05">
            <div class="col-lg-6 mobileCenter">
                <button class="btn btn-sm btn-info btnSharePic">Share Photo</button>
            </div>
            <div class="col-lg-6 textRight mobileCenter">
                <input type="hidden" name="picID" class="idForm" value="">
                <button class="btn btn-sm btn-outline-danger btnDeletePic">Delete Photo</button>
            </div>
        </div>
        <form action="/editMeta" method="POST" class="margintop05">
            <input type="hidden" name="site" class="siteForm">
            <label for="nameForm" class="mylabel">Photo Name:</label>
            <input name="picName" type="text" class="form-control" id="nameForm" placeholder="Photo Name">
            <label for="locationForm" class="mylabel">Geolocation:</label>
            <input name="picLocation" type="text" class="form-control" id="locationForm" placeholder="Geolocation">
            <label for="tagsForm" class="mylabel">Tags:</label>
            <input name="picTags" type="text" class="form-control" id="tagsForm" placeholder="Tags">
            <label for="accessForm" class="mylabel">Access Level:</label>
            <input name="picAccess" type="number" class="form-control" id="accessForm" placeholder="Access Level" min="1" max="3">
            <label for="dateForm" class="mylabel">Date Created</label>
            <input type="text" class="form-control" id="dateForm" placeholder="Date Created" disabled>
            <label for="creatorForm" class="mylabel">Created By:</label>
            <input type="text" class="form-control" id="creatorForm" placeholder="Created By" disabled>
            <div class="textCenter">
                <input type="hidden" name="picID" class="idForm" value="">
                <button class="btn btn-success margintop1 width10" type="submit">Update</button>
            </div>
        </form>
        <div class="textCenter margintop1">
            <a class="btn btn-primary btn-sm" href="" download="" id="downloadForm" target="_blank">Download Photo</a>
        </div>
        <div class="textCenter">
            <a href="#" class="btn btn-cancel margintop05 btnCloseMetaDiv width10">Close</a>
        </div>
    </div>
</div>

<div class="popupNoShow deletePicDiv">
    <div class="deletePicInfo">
        <h5 class="text-danger textCenter">Are you sure you want to delete this photo?</h5>
        <form action="/deletePic" method="POST" class="margintop05">
            <input type="hidden" name="site" class="siteForm">
            <div class="textCenter">
                <input type="hidden" name="picID" class="idForm" value="">
                <button class="btn btn-danger margintop1 width10" type="submit">Delete</button>
            </div>
        </form>
        <div class="textCenter">
            <a href="#" class="btn btn-cancel margintop05 btnCloseDelete width10">Close</a>
        </div>
    </div>
</div>

<div class="popupNoShow sharePicDiv">
    <div class="sharePicInfo">
        <form action="/sharePic" method="POST" class="margintop05">
            <h5 class="textCenter text-success">Enter their email address</h5>
            <input name="email" type="email" class="form-control" id="emailForm" placeholder="Email address">
            <div class="textCenter">
                <input type="hidden" name="picID" class="idForm" value="">
                <button class="btn btn-success margintop1 width10" type="submit">Share</button>
            </div>
        </form>
        <div class="textCenter">
            <a href="#" class="btn btn-cancel margintop05 btnCloseShare width10">Close</a>
        </div>
    </div>
</div>